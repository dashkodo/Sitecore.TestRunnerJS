<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <settings>
      <setting name="SpeakTest.BootstrapModulePath" value="/SpeakTest/bootstrapper.js"/>
      <setting name="SpeakTest.RequireJSSettingName" value="Speak.Html.RequireJSBackwardCompatibilityFile"/>
      <setting name="SpeakTest.RootTestFixturesFolder" value="/SpeakTest/Tests"/>
    </settings>
    <pipelines>
      <httpRequestBegin>
        <processor type="Sitecore.SpeakTest.Pipelines.HttpRequest.EnsureSpeakTestingEnabled, Sitecore.SpeakTest" 
                   patch:after="processor[@type='Sitecore.Pipelines.HttpRequest.QueryStringResolver, Sitecore.Kernel']" />
      </httpRequestBegin>
    </pipelines>
  </sitecore>
</configuration>